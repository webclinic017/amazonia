FROM python:3.9

RUN apt-get update && \
    apt-get install -y bison build-essential cmake flex git libedit-dev zlib1g-dev libelf-dev libclang-llvm-dev

RUN pip install --no-cache-dir llvmlite

WORKDIR /app

COPY . /app

RUN pip install --no-cache-dir -r requirements.txt

EXPOSE 5000

CMD ["python", "backend.py"]
