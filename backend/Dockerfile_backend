FROM python:3.9

WORKDIR /app

COPY . /app

RUN pip install --no-cache-dir -r requirements.txt

RUN apt-get update && apt-get install -y bpfcc-tools

RUN cp -r /usr/share/bpfcc/include/bcc /usr/local/include/
RUN cp -r /usr/lib/python3/dist-packages/bcc /usr/local/lib/python3.9/site-packages/

EXPOSE 5000

CMD ["python", "backend.py"]

